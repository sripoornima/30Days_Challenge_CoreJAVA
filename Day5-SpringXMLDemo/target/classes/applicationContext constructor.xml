<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="studentBean" class="com.xmlconfig.constructorinjection.Student">
        <constructor-arg value="John Doe"/>
        <constructor-arg value="21"/>
    </bean>

    <bean id="teacherBean" class="com.xmlconfig.constructorinjection.Teacher">
        <constructor-arg value="Mrs. Smith"/>
        <constructor-arg value="Mathematics"/>
    </bean>

</beans>
